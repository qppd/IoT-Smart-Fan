<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools/android.support.constraint.lib:constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewWiFiStrength"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_wifi_strength_4"
            android:tint="?attr/colorOnSurface"
            android:layout_marginEnd="16dp"
            android:contentDescription="WiFi Signal Strength" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewSSID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Network Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/textViewSecurity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WPA2"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:background="@drawable/security_tag_background"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textViewFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.4 GHz"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewLockIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_lock"
            android:tint="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            android:contentDescription="Secured Network" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>